{
	"manifest_version": 2,
	"name": "Advanced Wii Shop Channel Music Extension",
	"version": "1.0",
	"author": "Bingies24 (Original by Corbin Davenport)",
	"description": "Plays the Wii Shop theme and more when you visit shopping or other websites.",
	"homepage_url": "https://github.com/bingies24/wii-shop-extension",
	"permissions": [
		"tabs",
		"notifications"
	],
	"background": {
		"scripts": [
			"js/site-list.js",
			"js/background.js"
		]
	},
	"icons": {
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_icon": "img/icon48.png",
		"default_title": "",
		"default_popup": "popup/choose-song.html"		
	}
}